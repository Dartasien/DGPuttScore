<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiscGolfPuttMiniGame.Portable.Views.MainPageX">
  <StackLayout>
    <Label Text="Welcome!" FontSize="24" VerticalOptions="Center" HorizontalOptions="Center"></Label>
    <Label Text="How many players for this game?" VerticalOptions="Center" HorizontalOptions="Center"></Label>
    <Entry x:Name="PlayerCount" Placeholder="# of Players" Keyboard="Numeric" VerticalOptions="Center" HorizontalOptions="Center"></Entry>
    <Label Text="How many rounds for this game?" VerticalOptions="Center" HorizontalOptions="Center"></Label>
    <Entry x:Name="RoundCount" Placeholder="# of Rounds" Keyboard="Numeric" VerticalOptions="Center" HorizontalOptions="Center"></Entry>
    <Button x:Name="StartScoreTrackerGame" Text="Add Players" Clicked="StartScoreTrackerGame_OnClicked" VerticalOptions="Center" HorizontalOptions="Center" ></Button>
  </StackLayout>
</ContentPage>